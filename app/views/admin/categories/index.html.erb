<% provide :title, t("static_pages.list_cate") %>
<div class="container-fluid">
  <a href="#" class="navbar-brand"><%= t "category.search_cate" %></a>
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
    <form class="navbar-form navbar-left">
      <div class="form-group">
        <input class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default"><%= t "manage_user.submit" %></button>
    </form>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t "static_pages.list_cate" %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th><%= t "category.cate" %></th>
          <th><%= t "category.create_at" %></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <%= render partial: "category", collection: @categories %>
    </table>
  </div>
  <%= will_paginate @categories %>
</div>
<%= link_to t("category.new_cate"), new_admin_category_path %>
<br>
