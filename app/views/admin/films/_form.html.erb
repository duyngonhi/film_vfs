<div class="bs-example" data-example-id="form-validation-states">
  <%= form_for [:admin, @film] do |f| %>
    <%= render "/share/error_message", object: f.object %>

    <div class="form-group has-success">
      <%= f.label :name_film , class:"control-label" %><br />
      <%= f.text_field :name_film, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group has-success">
      <%= f.label :year_screen, class:"control-label" %><br />
      <%= f.date_field :year_screen, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group has-success">
      <%= f.label :category_id, class:"control-label" %><br />
      <%= f.select :category_id, options_for_select(@categories.collect{ |category|
        [category.name, category.id]}, params[:category_id]), {}, {class:"form-control"} %>
    </div>

    <div class="form-group has-success">
      <%= f.label :picture_film, class:"control-label" %><br />
      <%= f.text_field :picture_film, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group has-success">
      <%= f.label :link_trailer, class:"control-label" %><br />
      <%= f.text_field :link_trailer, autofocus: true, class:"form-control" %>
    </div>

    <div class="col-md-offset-5">
      <%= f.submit t("authenticate.signup"), class:"btn btn-success" %>
    </div>
  <% end %>
</div>
