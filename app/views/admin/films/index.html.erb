<% provide :title, t("manage_films.list_film") %>
<div class="container-fluid">
  <a href="#" class="navbar-brand"><%= t "manage_films.search_film" %></a>
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
    <form class="navbar-form navbar-left">
      <div class="form-group">
        <input class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default"><%= t "manage_user.submit" %>
      </button>
    </form>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t "manage_user.list_film" %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th></th>
          <th><%= t "manage_films.name_film" %></th>
          <th><%= t "manage_films.year_screen" %></th>
          <th><%= t "manage_films.raiting" %></th>
          <th><%= t "manage_films.count_like" %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <%= render partial: "film", collection: @films %>
    </table>
  </div>
</div>
<%= link_to t("manage_films.new_film"), new_admin_film_path %>
<br>
