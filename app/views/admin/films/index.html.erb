<% provide :title, t("manage_films.list_film") %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t "manage_user.list_film" %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <%= search_form_for @search, url: admin_films_path do |f| %>
            <th></th>
            <th class="center"><%= f.search_field :name_film_cont, size: 10 %></th>
            <th class="center"><%= f.search_field :year_screen_cont, size: 10 %></th>
            <th class="center"><%= f.search_field :rating_film_cont, size: 10 %></th>
            <th class="center"><%= f.search_field :count_like_cont, size: 10 %></th>
            <th colspan="3" class="center"><%= f.submit t("action.search"),
              class:"btn btn-success" %></th>
          <% end %>
        </tr>
        <tr>
          <th></th>
          <th><%= sort_link @search, :name_film, t("manage_films.name_film") %></th>
          <th><%= sort_link @search, :year_screen, t("manage_films.year_screen") %></th>
          <th><%= sort_link @search, :rating_film,  t("manage_films.raiting") %></th>
          <th><%= sort_link @search, :count_like, t("manage_films.count_like") %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <%= render partial: "film", collection: @films %>
    </table>
  </div>
  <%= will_paginate @films %>
</div>
<%= link_to t("manage_films.new_film"), new_admin_film_path %>
<br>
