<tbody>
  <tr>
    <td><%= user.fullname %></td>
    <td><%= user.birthday %></td>
    <td><%= user.address %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.role %></td>
    <td><%= link_to t("manage_user.show"), admin_user_path(user.id),
      class:"glyphicon glyphicon-upload" %></td>
    <td><%= link_to t("manage_user.edit"), edit_admin_user_path(user.id),
      class:"glyphicon glyphicon-pencil" %></td>
    <td><%= link_to t("manage_user.destroy"), admin_user_path(user.id),
      class:"glyphicon glyphicon-remove", method: :delete,
      data: {confirm: t("manage_user.you_sure")} %></td>
  </tr>
</tbody>
