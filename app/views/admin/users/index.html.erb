<% provide :title, t("static_pages.lst_user") %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t "manage_user.list_user" %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <%= search_form_for @search, url: admin_users_path do |f| %>
            <th class="center"><%= f.search_field :fullname_cont, size: 10 %></th>
            <th class="center"><%= f.search_field :birthday_cont, size: 10 %></th>
            <th class="center"><%= f.search_field :address_cont, size: 10 %></th>
            <th class="center"><%= f.search_field :email_cont, size: 10 %></th>
            <th class="center"><%= f.search_field :phone_cont, size: 10 %></th>
            <th class="center"><%= f.search_field :role_cont, size: 10 %></th>
            <th colspan="3" class="center"><%= f.submit t("action.search"),
              class:"btn btn-success" %></th>
          <% end %>
        </tr>
        <tr>
          <th><%= t "manage_user.name" %></th>
          <th><%= t "manage_user.birthday" %></th>
          <th><%= t "manage_user.address" %></th>
          <th><%= t "manage_user.email" %></th>
          <th><%= t "manage_user.phone" %></th>
          <th><%= t "manage_user.role" %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <%= render partial: "user", collection: @users %>
    </table>
  </div>
  <%= will_paginate @users %>
</div>
<br>
