<% provide :title, t("static_pages.lst_user") %>
<div class="container-fluid">
  <a href="#" class="navbar-brand"><%= t "manage_user.search_user" %></a>
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
    <form class="navbar-form navbar-left">
      <div class="form-group">
        <input class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default"><%= t "manage_user.submit" %></button>
    </form>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t "manage_user.list_user" %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th><%= t "manage_user.name" %></th>
          <th><%= t "manage_user.birthday" %></th>
          <th><%= t "manage_user.address" %></th>
          <th><%= t "manage_user.email" %></th>
          <th><%= t "manage_user.role" %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <%= render partial: "user", collection: @users %>
    </table>
  </div>
</div>
<br>
