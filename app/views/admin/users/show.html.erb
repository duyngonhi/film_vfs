<% provide :title, t("static_pages.show_user") %>
<div class="row">
  <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
    <p class=" text-info"><%= t "manage_user.paner_time" %></p>
  </div>
  <div class="col-xs-6 col-sm-3 sidebar-offcanvas margin-top-menuleft">
    <div class="sidebar-nav">
      <ul class="nav">
        <li><%= @user.fullname %> -> <%= t "manage_user.followeing" %></li>
        <li><a href="#"><%= t "manage_user.activity" %></a></li>
