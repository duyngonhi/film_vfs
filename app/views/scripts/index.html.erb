<% provide :title, t("static_pages.title_script") %>
<div class="container-fluid">
  <a href="#" class="navbar-brand"><%= t "manage_films.search_film" %></a>
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
    <form class="navbar-form navbar-left">
      <div class="form-group">
        <input class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default"><%= t "manage_user.submit" %>
      </button>
      <%= link_to t("script_film.new_script"), new_script_path,
        class:"new-script glyphicon glyphicon-edit" %>
    </form>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t "manage_user.list_film" %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th></th>
          <th><%= t "script_film.title" %></th>
          <th><%= t "script_film.content" %></th>
          <th><%= t "script_film.status" %></th>
          <th><%= t "script_film.create_date" %></th>
        </tr>
      </thead>
      <%= render partial: "script", collection: @scripts %>
    </table>
  </div>
</div>
<br>
