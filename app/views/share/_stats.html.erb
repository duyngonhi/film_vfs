<div class="stats">
  <strong id="following" class="stat">
    <%= link_to pluralize(@user.following.count,
      "following"),
      relationship_path(@user, query:"following")%>
  </strong>
  <strong id="followers" class="stat">
    <%= link_to pluralize(@user.followers.count,
      "followers"),
      relationship_path(@user, query:"followers")%>
  </strong>
</div>
